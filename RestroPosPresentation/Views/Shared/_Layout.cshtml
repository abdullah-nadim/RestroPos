<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestroPOS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Search bar -->
    <div class="input-group my-3">
        <input type="text" class="form-control" placeholder="Search products..." />
        <span class="input-group-text"><i class="bi bi-search"></i></span>
    </div>
    <div class="d-flex">



        <!-- Categories -->
        <!-- Product Grid -->
        <!-- Sidebar -->

        <div class="bg-light border-end" id="sidebar-wrapper" style="width: 80px;">
            <div class="list-group list-group-flush text-center">
                <a class="list-group-item list-group-item-action active" href="#">🏠<br /><small>Home</small></a>
                <a class="list-group-item list-group-item-action" href="#">👥<br /><small>Customers</small></a>
                <a class="list-group-item list-group-item-action" href="#">🪑<br /><small>Tables</small></a>
                <!-- Cashier removed -->
                <a class="list-group-item list-group-item-action" href="#">🧾<br /><small>Orders</small></a>
                <a class="list-group-item list-group-item-action" href="#">📊<br /><small>Reports</small></a>
                <a class="list-group-item list-group-item-action" href="#">⚙️<br /><small>Settings</small></a>
                <div class="mt-auto">
                    <a class="list-group-item list-group-item-action" href="#">🚪<br /><small>Logout</small></a>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="flex-grow-1">
            <main role="main" class="container-fluid p-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
